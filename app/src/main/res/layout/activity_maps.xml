<RelativeLayout

    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/TF_location"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/TF_location"
        android:onClick="onClick"
        android:text="Search" />


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_hopistals"
        tools:context="com.example.user.travelbud.MapsActivity" />

    <Button
        android:id="@+id/B_hopistals"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TF_location"
        android:onClick="onClick"
        android:text="Hospitals" />

    <Button
        android:id="@+id/B_schools"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TF_location"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Schools" />

    <Button
        android:id="@+id/B_restaurants"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/map"
        android:layout_alignEnd="@+id/B_search"
        android:onClick="onClick"
        android:text="Restaurants" />

    <Button
        android:id="@+id/B_satelite"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_hybrid"
        android:onClick="onClick"
        android:text="Satelite" />
    <Button
        android:id="@+id/B_hybrid"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_terrain"
        android:onClick="onClick"
        android:text="Hybrid" />
    <Button
        android:id="@+id/B_terrain"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_normal"
        android:onClick="onClick"
        android:text="Terrain" />

    <Button
        android:id="@+id/B_normal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_hopistals"
        android:layout_marginTop="67dp"
        android:onClick="onClick"
        android:text="normal" />

</RelativeLayout>

